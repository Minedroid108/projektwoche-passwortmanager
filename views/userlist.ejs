<%- include('../views/partials/head.ejs') %>
<body>
    <%- include('../views/partials/navbar.ejs') %>
    <section class="section">
        <div class="container">
            <h1 class="title"><img src="Icons/Usericon.png" width="25" height="25">  Nutzerliste</h1>
            <table class="table is-striped is-fullwidth">
                <thead>
                    <tr>
                        <th>Nutzer</th>
                        <th>Voname</th>
                        <th>Nachname</th>
                        <th>Admin Status</th>
                        <th>Abteilung</th>
                        <th>
                            <a href="/addUser"><img src="Icons/addUserIcon.png" width="25" height="25"></a>
                        </th>
                    </tr>
                    <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.Nutzername %></td>
                        <td><%= user.Vorname %></td>
                        <td><%= user.Nachname %></td>
                        <td>
                            <% if (user.IsAdmin == 0) { %>
                                Kein Admin
                            <% } else { %>
                                Admin
                            <% } %>
                        </td>
                        <td>
                            <% abteilungen.forEach(function(abteilung) { %>
                                <% if (abteilung.UserID == user.ID) { %>
                                    <%= abteilung.Abteilungen %>
                                <% } %>
                            <% }) %>
                        </td>
                        <td>
                            <a href=""><img src="Icons/edit.png" width="25" height="25"></a>
                            <a href=""><img src="Icons/trash.png" width="25" height="25"></a>
                        </td>
                    </tr>
                    <% }) %>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </section>
</body>
</html>